-content_for :javascript do
  initialize_braintree_account_form("#{I18n.locale}");
  
= render :partial => "layouts/left_hand_navigation", :locals => { :links => settings_links_for(@current_user, @current_community) }

.left-navi-section.settings-section

  %h2= t(".add_payout_details")

  = form_for @braintree_account, :url => form_action, :html => {:method => "post", :id => "braintree_account_form"} do |form|

    = form.label :first_name, t(".first_name"), :class => "input"
    = form.text_field :first_name, :class => "auto_width", :size => 30, :required => "required"

    = form.label :ifsc_number, t(".ifsc_number"), :class => "input"
    = form.text_field :ifsc_number, :class => "auto_width", :required => "required"

    = form.label :account_number, t(".account_number"), :class => "input"
    = form.text_field :account_number, :class => "auto_width", :required => "required"
    
    = form.label :bank_name_and_branch, t(".bank_name_and_branch"), :class => "input"
    = form.text_field :bank_name_and_branch, :class => "auto_width", :size => 30, :required => "required"

    %br/

    = form.button t(".save"), :class => "send_button"

  %br/